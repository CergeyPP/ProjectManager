<Page x:Class="ProjectManager.Pages.EmployeersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectManager.Pages"
      xmlns:main="clr-namespace:ProjectManager"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EmployeersPage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="400*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="720*"/>
            <ColumnDefinition Width="80*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" Text="Сотрудники" Height="24" VerticalAlignment="Center" FontWeight="Bold" FontSize="20" Margin="15,0,10,0" />
        <ListBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="10,10,10,10">

        </ListBox>
        <Button Margin="10,10,10,0" Grid.Column="1" Grid.Row="0">
            Добавить
        </Button>
    </Grid>
</Page>
