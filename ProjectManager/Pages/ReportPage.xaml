<Page x:Class="ProjectManager.Pages.ReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectManager.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReportPage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="400*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="0" Text="Отчеты" Height="24" VerticalAlignment="Center" FontWeight="Bold" FontSize="20" Margin="15,0,10,0" />
        <StackPanel Grid.Row="1" Margin="15,0,15,15">
            <Button Width="Auto" Margin="15,0,15,15" Content="Отчет о выполнении рабочих задач"/>
            <Button Width="Auto" Margin="15,0,15,15" Content="Согласие на обработку персональных данных"/>
            <Button Width="Auto" Margin="15,0,15,15" Content="Договор о конфиденциальности"/>
        </StackPanel>
    </Grid>
</Page>
